{
    "manifest_version": 2,
    "name": "CPC Link Crusher",
    "version": "1.0",
  
    "description": "Quickly shorten links throught cpc.cx and copy them your clipboard",
    "homepage_url": "https://github.com/Kanabenki/cpc-link-crusher",
    "icons": { 
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
     "128": "icons/icon-128.png"
    },
  
    "permissions": [
      "tabs", "clipboardWrite", "notifications", "<all_urls>"
    ],

    "background": {
      "scripts": ["background/background.js"]
    },
  
    "browser_action": {
      "default_title": "CPC Link Crusher",
      "default_icon": "icons/icon-32.png"
    } 
}
